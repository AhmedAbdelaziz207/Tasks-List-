<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TasksList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MainScreenStyle">
        <item name="android:background">@color/screen_background</item>
    </style>
    <style name="TextLabelsStyle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonsStyle">
        <item name="background">@color/primary_dark</item>
    </style>
    <style name="NavBarStyle">
        <item name="android:background">@color/primary_dark</item>
        <item name="itemTextColor">@color/gray</item>
    </style>
</resources>